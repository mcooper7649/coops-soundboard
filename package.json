{
  "name": "soundboard",
  "version": "1.0.0",
  "description": "A live soundboard desktop application built with Electron, React, and TypeScript",
  "main": "dist/main/main/main.js",
  "homepage": "./",
  "scripts": {
    "start": "npm run setup:audio && concurrently \"npm run build:main\" \"npm run build:renderer\" \"npm run electron\"",
    "dev": "npm run setup:audio && concurrently \"npm run watch:main\" \"npm run watch:renderer\" \"npm run electron\"",
    "setup:audio": "./scripts/startup-virtual-audio.sh",
    "audio:setup": "npm run setup:audio",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json && node scripts/fix-imports.js",
    "build:renderer": "webpack --mode production",
    "watch:main": "tsc -p tsconfig.main.json --watch",
    "watch:renderer": "webpack --mode development --watch",
    "electron": "wait-on dist/renderer/index.html && electron . --no-sandbox",
    "test:audio": "node scripts/test-audio.js",
    "test:audio:simple": "node scripts/test-audio-simple.js",
    "pack": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "soundboard",
    "audio",
    "electron",
    "react",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/electron-store": "^1.3.1",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-store": "^8.1.0",
    "framer-motion": "^10.16.16",
    "html-webpack-plugin": "^5.5.4",
    "lucide-react": "^0.294.0",
    "mic": "^2.1.2",
    "postcss": "^8.4.32",
    "postcss-loader": "^7.3.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "speaker": "^0.5.5",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.4.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0",
    "wav": "^1.0.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "build": {
    "appId": "com.soundboard.app",
    "productName": "SoundBoard",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.music"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "play-sound": "^1.1.6"
  }
}
